<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasicSignUpProfilePages.MainPage"
             Title="">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Sign Up"
                FontSize="Title" />
            <Entry
                x:Name="txtUsername"
                Placeholder="Username"
            />
            <Entry
                x:Name="txtEmail"
                Placeholder="Email"
            />
            <Entry
                x:Name="txtPassword"
                Placeholder="Password"
                IsPassword="True"
            />
            <Entry
                x:Name="txtConfirmPassword"
                Placeholder="Confirm Password"
                IsPassword="True"
            />
            <Label 
                x:Name="lblErrorMessage"
                TextColor="Red"
            />
            <Button
                x:Name="btnSignUp"
                Clicked="btnSignUp_Clicked"
                Text="Sign Up" 
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
