<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasicSignUpProfilePages.ProfilePage">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label
            Text="Profile"
            FontSize="Title" />
        <Border Stroke="Transparent">
            <VerticalStackLayout
                Spacing="10">
                <Label 
                    x:Name="lblUsername"
                    Text="Username: Placeholder" />
                <Label 
                    x:Name="lblEmail"
                    Text="Email: Placeholder" />
            </VerticalStackLayout>
        </Border>
        <Label 
            x:Name="lblConfirmation"
            Text="Successfully signed up!"
            FontSize="Small"/>
        <Button 
            x:Name="btnSignOut"
            Clicked="btnSignOut_Clicked"
            Text="Sign Out"/>
    </VerticalStackLayout>
</ContentPage>